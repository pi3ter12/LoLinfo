<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/itemDetailListIVmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/itemDetailListTVbaseGold"
        android:background="#CCCC00"
        android:gravity="right"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/itemDetailListTVbaseGold"
        android:layout_alignParentRight="true"
        android:id="@+id/itemDetailListTVtotalGold"
        android:background="#00CC00"
        android:gravity="right"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/itemDetailListTVtotalGold"
        android:layout_alignParentRight="true"
        android:id="@+id/itemDetailListTVsellGold"
        android:gravity="right"
        android:background="#CC0000"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/itemDetailListTVsellGold"
        android:id="@+id/itemDetailListTitle"
        android:layout_width="match_parent"
		android:layout_marginBottom="5dp"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_height="wrap_content" />
</RelativeLayout>
