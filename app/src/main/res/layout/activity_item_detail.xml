<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lolinfo.wiacekp.pl.lolinfo.lolinfo.ItemDetailActivity">
    <ImageView
        android:id="@+id/itemDetailIVmain"
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/itemDetailTVbaseGold"
        android:layout_alignParentRight="true"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:background="#CCCC00"
        android:gravity="right"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_below="@id/itemDetailTVbaseGold"
        android:id="@+id/itemDetailTVtotalGold"
        android:background="#00CC00"
        android:gravity="right"
        android:layout_width="150dp"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_below="@id/itemDetailTVtotalGold"
        android:id="@+id/itemDetailTVsellGold"
        android:layout_width="150dp"
        android:background="#CC0000"
        android:gravity="right"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/itemDetailTVsellGold"
        android:id="@+id/itemDetailTitle"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/itemDetailTitle"
        android:visibility="visible"
        android:id="@+id/itemDetailDescription"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/itemDetailDescription"
        android:id="@+id/itemDetailTVintoBuild"
        android:layout_marginTop="20dp"
        android:text="@string/itemDetailIntoBuild"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_below="@id/itemDetailTVintoBuild"
        android:id="@+id/itemDetailLVInto"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/itemDetailLVInto"
        android:id="@+id/itemDetailTVFromBuild"
        android:layout_marginTop="20dp"
        android:text="@string/itemDetailFromBuild"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_below="@id/itemDetailTVFromBuild"
        android:id="@+id/itemDetailLVFrom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
